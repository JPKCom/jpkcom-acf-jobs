<wpml-config>
  <custom-types>
    <custom-type translate="1" display-as-translated="1">job_location</custom-type>
    <custom-type translate="1" display-as-translated="1">job_company</custom-type>
    <custom-type translate="1">job</custom-type>
  </custom-types>
  <taxonomies>
    <taxonomy translate="1" display-as-translated="1">job-attribute</taxonomy>
  </taxonomies>
  <custom-fields>
    <!-- Job Details -->
    <custom-field action="translate">job_short_description</custom-field>
    <custom-field action="copy">job_type</custom-field>
    <custom-field action="copy-once">job_url</custom-field>
    <custom-field action="copy">job_work_type</custom-field>
    <custom-field action="copy-once">job_location</custom-field>
    <custom-field action="copy-once">job_company</custom-field>

    <!-- Salary Group (should be copied, not translated) -->
    <custom-field action="copy-once">job_base_salary_group_job_salary</custom-field>
    <custom-field action="copy-once">job_base_salary_group_job_salary_currency</custom-field>
    <custom-field action="copy-once">job_base_salary_group_job_salary_period</custom-field>
    <custom-field action="copy-once">job_base_salary_group</custom-field>

    <!-- Attributes and Meta -->
    <custom-field action="copy-once">job_attribute</custom-field>
    <custom-field action="copy-once">job_closed</custom-field>
    <custom-field action="copy-once">job_featured</custom-field>
    <custom-field action="copy-once">job_expiry_date</custom-field>

    <!-- Application Section -->
    <custom-field action="copy-once">job_application_show_description</custom-field>
    <custom-field action="translate">job_application_description</custom-field>
    <custom-field action="copy-once">job_application_show_button</custom-field>
    <custom-field action="translate">job_application_button</custom-field>
    <custom-field action="copy-once">job_application_show_shortcode</custom-field>
    <custom-field action="copy-once">job_application_shortcode</custom-field>

    <!-- Flexible Content Layout - Using wildcards for dynamic rows -->
    <!-- The % wildcard matches any row index (0, 1, 2, etc.) -->
    <custom-field action="copy-once">job_layout_content</custom-field>

    <!-- Layout 1: Text Left / Image Right -->
    <custom-field action="translate">job_layout_content_%_text_left</custom-field>
    <custom-field action="copy-once">job_layout_content_%_img_right</custom-field>

    <!-- Layout 2: Image Left / Text Right -->
    <custom-field action="copy-once">job_layout_content_%_img_left</custom-field>
    <custom-field action="translate">job_layout_content_%_text_right</custom-field>

    <!-- Layout 3: Full Width WYSIWYG -->
    <custom-field action="translate">job_layout_content_%_wysiwyg_full</custom-field>

    <!-- Location Fields -->
    <custom-field action="copy-once">job_location_place</custom-field>
    <custom-field action="copy-once">job_location_zip</custom-field>
    <custom-field action="copy-once">job_location_street</custom-field>
    <custom-field action="copy-once">job_location_region</custom-field>
    <custom-field action="copy-once">job_location_country</custom-field>
    <custom-field action="copy-once">job_location_jobs</custom-field>

    <!-- Company Fields -->
    <custom-field action="copy-once">job_company_url</custom-field>
    <custom-field action="copy-once">job_company_logo</custom-field>
    <custom-field action="copy-once">job_company_jobs</custom-field>

    <!-- ============================================ -->
    <!-- ACF Internal Fields - IGNORE THESE -->
    <!-- These store field keys, not actual content -->
    <!-- ============================================ -->
    <custom-field action="ignore">_job_short_description</custom-field>
    <custom-field action="ignore">_job_type</custom-field>
    <custom-field action="ignore">_job_url</custom-field>
    <custom-field action="ignore">_job_work_type</custom-field>
    <custom-field action="ignore">_job_location</custom-field>
    <custom-field action="ignore">_job_company</custom-field>
    <custom-field action="ignore">_job_base_salary_group_job_salary</custom-field>
    <custom-field action="ignore">_job_base_salary_group_job_salary_currency</custom-field>
    <custom-field action="ignore">_job_base_salary_group_job_salary_period</custom-field>
    <custom-field action="ignore">_job_base_salary_group</custom-field>
    <custom-field action="ignore">_job_attribute</custom-field>
    <custom-field action="ignore">_job_closed</custom-field>
    <custom-field action="ignore">_job_featured</custom-field>
    <custom-field action="ignore">_job_expiry_date</custom-field>
    <custom-field action="ignore">_job_application_show_description</custom-field>
    <custom-field action="ignore">_job_application_description</custom-field>
    <custom-field action="ignore">_job_application_show_button</custom-field>
    <custom-field action="ignore">_job_application_button</custom-field>
    <custom-field action="ignore">_job_application_show_shortcode</custom-field>
    <custom-field action="ignore">_job_application_shortcode</custom-field>
    <custom-field action="ignore">_job_layout_content</custom-field>
    <custom-field action="ignore">_job_layout_content_%_text_left</custom-field>
    <custom-field action="ignore">_job_layout_content_%_img_right</custom-field>
    <custom-field action="ignore">_job_layout_content_%_img_left</custom-field>
    <custom-field action="ignore">_job_layout_content_%_text_right</custom-field>
    <custom-field action="ignore">_job_layout_content_%_wysiwyg_full</custom-field>
    <custom-field action="ignore">_job_layout_content_%_acf_fc_layout</custom-field>
    <custom-field action="ignore">_job_location_place</custom-field>
    <custom-field action="ignore">_job_location_zip</custom-field>
    <custom-field action="ignore">_job_location_street</custom-field>
    <custom-field action="ignore">_job_location_region</custom-field>
    <custom-field action="ignore">_job_location_country</custom-field>
    <custom-field action="ignore">_job_location_jobs</custom-field>
    <custom-field action="ignore">_job_company_url</custom-field>
    <custom-field action="ignore">_job_company_logo</custom-field>
    <custom-field action="ignore">_job_company_jobs</custom-field>
  </custom-fields>
</wpml-config>